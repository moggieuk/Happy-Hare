
choice 
  prompt "Gate homing endstop" 
  default PARAM_GATE_HOMING_ENDSTOP_ENCODER if \
    HW_MMU_TYPE_ERCF_V1_1 || \
    HW_MMU_TYPE_ERCF_V2 || \
    MMU_CUSTOM_TYPE_A_ENCODER
  default PARAM_GATE_HOMING_ENDSTOP_GATE if \
    HW_MMU_TYPE_TRADRACK_V1 || \
    HW_MMU_TYPE_3MS_V1 || \
	HW_MMU_TYPE_ANGRY_BEAVER_V1	|| \
    MMU_CUSTOM_TYPE_A_NO_ENCODER || \
    MMU_CUSTOM_TYPE_B_SHARED_GATE || \
    MMU_CUSTOM_TYPE_B_SHARED_GATE_ENCODER
  default PARAM_GATE_HOMING_ENDSTOP_POST_GATE if \
	HW_MMU_TYPE_BOX_TURTLE_V1 || \
	HW_MMU_TYPE_NIGHT_OWL_V1 || \
	MMU_CUSTOM_TYPE_B_INDIVIDUAL_GATE || \
	MMU_CUSTOM_TYPE_B_INDIVIDUAL_GATE_ENCODER
  default PARAM_GATE_HOMING_ENDSTOP_NONE
  config PARAM_GATE_HOMING_ENDSTOP_ENCODER
    bool "Encoder homing endstop"
  config PARAM_GATE_HOMING_ENDSTOP_GATE
    bool "Gate homing endstop"
  config PARAM_GATE_HOMING_ENDSTOP_POST_GATE
    bool "Post-gate homing endstop"
  config PARAM_GATE_HOMING_ENDSTOP_NONE
    bool "No homing endstop"
endchoice

config PARAM_GATE_HOMING_ENDSTOP
  string 
  default "extruder" if PARAM_GATE_HOMING_ENDSTOP_ENCODER
  default "gate" if PARAM_GATE_HOMING_ENDSTOP_GATE
  default "post_gate" if PARAM_GATE_HOMING_ENDSTOP_POST_GATE
  default "none" if PARAM_GATE_HOMING_ENDSTOP_NONE


choice 
  prompt "Extruder homing endstop" 
  default PARAM_EXTRUDER_HOMING_ENDSTOP_COLLISION if \
    HW_MMU_TYPE_ERCF_V1_1 || \
    HW_MMU_TYPE_ERCF_V2 
  default PARAM_EXTRUDER_HOMING_ENDSTOP_EXTRUDER if \
	HW_MMU_TYPE_ANGRY_BEAVER_V1	|| \
    HW_MMU_TYPE_3MS_V1 
  default PARAM_EXTRUDER_HOMING_ENDSTOP_NONE
  config PARAM_EXTRUDER_HOMING_ENDSTOP_COLLISION
    bool "Collision homing endstop"
  config PARAM_EXTRUDER_HOMING_ENDSTOP_EXTRUDER
    bool "Extruder homing endstop"
  config PARAM_EXTRUDER_HOMING_ENDSTOP_NONE
    bool "No homing endstop"
endchoice

config PARAM_EXTRUDER_HOMING_ENDSTOP
  string 
  default "collision" if PARAM_EXTRUDER_HOMING_ENDSTOP_COLLISION
  default "encoder" if PARAM_EXTRUDER_HOMING_ENDSTOP_EXTRUDER
  default "none" if PARAM_EXTRUDER_HOMING_ENDSTOP_NONE
